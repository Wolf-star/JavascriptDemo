<!DOCTYPE html>
<html>
<head>
	<title></title>
	<style type="text/css">
	*{margin:0;padding: 0;font-size: 14px;}
	ul{height:50px;}
	li{list-style: none;float:left;margin-left: 20px;}
	input[type="text"]{width:50px;border:none;line-height: 20px;outline: medium;}
	input[name="number"]{border: 1px solid silver;text-align: center;width:30px;}
	input[type="button"]{width:20px;margin:0;}
	</style>
	<script type="text/javascript">

	function minus(index){
		var num=parseInt(document.getElementsByName('number')[index].value);//根据指定的-符号获取文本框内容
		if(num==0){alert("不能再少啦")}else{
			num--;
			document.getElementsByName('number')[index].value=num;
			var price=parseFloat(document.getElementsByName('price')[index].value);
			document.getElementsByName('xiaoji')[index].value=price*num;
		}
		show();
	}
	function plus(index){
		var num=parseInt(document.getElementsByName('number')[index].value);
		num++;
		document.getElementsByName('number')[index].value=num;
		var price=parseFloat(document.getElementsByName('price')[index].value);
		document.getElementsByName('xiaoji')[index].value=price*num;
		show();
	}
	function show(){
		var nums=document.getElementsByName('number');
		var totalNum=0;
		for(var i=0;i<nums.length;i++){
			/*alert(nums[i].value);*/
			totalNum+=parseInt(nums[i].value);
		}
		/*改成用Id赋值后就可以了，奇怪*/
		/*document.getElementById("totalNum").innerHTML="hello"
		document.getElementById("totalNum").innerHTML=totalNum;
		alert(document.getElementById("totalNum").innerHTML);*/
		document.getElementById("totalNum").innerHTML=totalNum;

		var price=document.getElementsByName('xiaoji');
		var totalPrice=0;
		for(var i=0;i<price.length;i++){
			totalPrice+=parseFloat(price[i].value);
		}
		document.getElementById("totalPrice").innerHTML=totalPrice;
	}

	</script>
</head>
	<body  onload="show()">
		<ul class="num">
			<li>$<input type="text" name="price" value="21.9"/></li>
			<li>
				<input type="button" name="" value="-"onclick="minus(0)">
				<input type="text" name="number" value="1" disabled="disabled">
				<input type="button" name="" value="+" onclick="plus(0)">
			</li>
			<li>$<input type="text" name="xiaoji" value="21.9"/></li>
		</ul>
		<ul class="num">
			<li>$<input type="text" name="price" value="25"/></li>
			<li>
				<input type="button" name="" value="-" onclick="minus(1)">
				<input type="text" name="number" value="1" disabled="disabled">
				<input type="button" name="" value="+" onclick="plus(1)">
			</li>
			<li>$<input type="text" name="xiaoji" value="25"/></li>
		</ul>
		<ul class="num">
			<li>$<input type="text" name="price" value="18.5"/></li>
			<li>
				<input type="button" name="" value="-" onclick="minus(2)">
				<input type="text" name="number" value="1" disabled="disabled">
				<input type="button" name="" value="+" onclick="plus(2)">
			</li>
			<li>$<input type="text" name="xiaoji" value="18.5"/></li>
		</ul>
			
			合计数量：<span id="totalNum">0</span>
			合计金额：<span id="totalPrice">0</span>
			

	</body>
</html>
